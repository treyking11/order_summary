<div class="form-group">
  <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
    <h4>Content Categories</h4>
  </a>
  <div id="collapseOne" class="collapse">
    <div class="form-group">
      <label class="form-check" id="checkAll_1">
        <div class="form-group">DO NOT MODIFY THIS SECTION IF AUDIENCES HAVE BEEN SELECTED!</div>
        <%= f.check_box(:content_cats, {checked: true}, "ALL", nil) %>
        SELECT ALL
      </label>
   </div>

     <div class="form-group" id="all_content_categories">
       <% @content.each do |categories| %>
         <div class="form-check">
           <label class="form-check-label">
             <%= f.check_box(:content_cats, {multiple: true}, categories, nil) %>
             <%= categories %>
           </label>
         </div>
       <% end %>
    </div>
  </div>
</div>

