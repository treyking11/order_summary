<div class="form-group">
  <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
    <h4>Content Categories</h4>
  </a>
  <div id="collapseOne" class="collapse">
    <div class="form-group">
      <label class="form-check-inline">
         <input class="form-check-input" type="checkbox" id="checkAll_1" checked> SELECT ALL </input>
       </label>
     </div>

     <div class="form-group" id="all_content_categories">
       <% @content.each do |categories| %>
         <div class="form-check">
           <label class="form-check-label">
             <%= f.check_box(:content_cats, {multiple: true}, categories, nil) %>
             <%= categories %>
           </label>
         </div>
       <% end %>
    </div>
  </div>
</div>
<div class="form-group">
  <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
    <h4>Carriers</h4>
  </a>
  <div id="collapseTwo" class="collapse">
    <div class="form-group">
      <label class="form-check-inline">
       <input class="form-check-input" type="checkbox" id="checkAll_2" checked> SELECT ALL </input>
     </label>
    </div>
    <div class="form-group" id="all_carrier_categories">
     <%= @carriers.each do |carrier_name| %>
       <div class="form-check">
         <label class="form-check-label">
           <%= f.check_box(:carriers, {multiple: true}, carrier_name, nil) %>
           <%= carrier_name %>
         </label>
       </div>
     <% end %>
    </div>
  </div>
</div>
